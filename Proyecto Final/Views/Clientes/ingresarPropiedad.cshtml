@using Proyecto_final.Models;
@model Inmueble
@{
    ViewBag.Title = "ingresarPropiedad";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Ingresar Propiedad
                <small>Solo Agentes</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Inicio", "Index", "Home")
                </li>
                <li class="active">Ingresar Propiedad</li>
            </ol>
        </div>
    </div>

    <div class="section-colored text-center">

        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    @using (Html.BeginForm("ingresarPropiedad", "Clientes", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                    <p>
                        Precio:$@Html.TextBoxFor(x => x.Precio)
                        Dirección: @Html.TextBoxFor(x => x.Direccion)
                    </p>
                        <p>
                            Superficie: @Html.TextBoxFor(x => x.Superficie)
                            Ambientes: @Html.TextBoxFor(x => x.Ambientes)
                        </p>
                        <p>
                            Habitaciones: @Html.TextBoxFor(x => x.Habitaciones)
                            Baños: @Html.TextBoxFor(x => x.Baños)
                        </p>
                        <p>
                            Patio: @Html.TextBoxFor(x => x.Patio)
                            Terraza: @Html.TextBoxFor(x => x.Terraza)
                        </p>
                        <p>Imagen: <input type="file" name="Image" submit value="Subir Imagen"/></p>
                        <input type="submit" value="Agregar" />

                    }
                </div>
            </div>
            <!-- /.row -->

        </div>
        <!-- /.container -->

    </div>

